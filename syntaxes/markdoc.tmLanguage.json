{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Markdoc",
  "scopeName": "text.html.markdoc",
  "patterns": [{ "include": "#markdoc" }, { "include": "text.html.markdown" }],
  "repository": {
    "markdoc": {
      "begin": "\\{%",
      "end": "\\/?%\\}",
      "captures": {
        "0": {
          "name": "punctuation.definition.tag.markdoc"
        }
      },
      "patterns": [
        {
          "include": "#primitives"
        },
        {
          "include": "#function"
        },
        {
          "include": "#array"
        },
        {
          "include": "#object"
        },
        {
          "include": "#variable"
        },
        {
          "match": "(?<=\\{%)(\\s*\\/?[\\w-]*\\b)\\s+",
          "name": "entity.name.tag.markdoc"
        },
        {
          "match": "(#)((?:\\w|-)*\\b)",
          "captures": {
            "1": {
              "name": "punctuation.definition.entity.markdoc"
            },
            "2": {
              "name": "entity.other.attribute-name.id.markdoc"
            }
          }
        },
        {
          "match": "(\\.)((?:\\w|-)*\\b)",
          "captures": {
            "1": {
              "name": "punctuation.definition.entity.markdoc"
            },
            "2": {
              "name": "entity.other.attribute-name.class.markdoc"
            }
          }
        },
        {
          "match": "(\\b\\w+)(\\=)",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.markdoc"
            },
            "2": {
              "name": "keyword.operator.markdoc"
            }
          }
        },
        {
          "match": "(\\$)([\\w.\\[\\]]+)",
          "name": "variable.markdoc",
          "captures": {
            "1": {
              "name": "variable.sigil.markdoc"
            },
            "2": {
              "patterns": [
                {
                  "include": "#punctuation-accessor"
                },
                {
                  "begin": "\\[",
                  "end": "\\]",
                  "captures": {
                    "0": {
                      "name": "meta.brace.square.markdoc"
                    }
                  },
                  "patterns": [
                    {
                      "include": "#primitives"
                    }
                  ]
                }
              ]
            }
          }
        },
        {
          "match": "({%|\\/?%})",
          "name": "punctuation.definition.tag.markdoc"
        }
      ]
    },
    "punctuation-comma": {
      "name": "punctuation.separator.comma.markdoc",
      "match": ","
    },
    "punctuation-accessor": {
      "match": "(?:(\\.))",
      "captures": {
        "1": {
          "name": "punctuation.accessor.markdoc"
        }
      }
    },
    "primitives": {
      "patterns": [
        {
          "match": "\".*?\"",
          "name": "string.markdoc"
        },
        {
          "match": "\\b\\d+\\.?\\d*\\b",
          "name": "constant.language.numeric.markdoc"
        },
        {
          "match": "false|true",
          "name": "constant.language.boolean.markdoc"
        },
        {
          "match": "null",
          "name": "constant.language.null.markdoc"
        }
      ]
    },
    "function": {
      "match": "\\b\\w+(?=\\()",
      "name": "entity.name.function.markdoc"
    },
    "array": {
      "name": "meta.array.markdoc",
      "begin": "\\[",
      "end": "\\]",
      "captures": {
        "0": {
          "name": "meta.brace.square.markdoc"
        }
      },
      "patterns": [
        {
          "include": "#primitives"
        },
        {
          "include": "#punctuation-comma"
        },
        {
          "include": "#variable"
        },
        {
          "include": "#function"
        },
        {
          "include": "#array"
        }
      ]
    },
    "object": {
      "name": "meta.object.markdoc",
      "begin": "\\{",
      "end": "\\}",
      "captures": {
        "0": {
          "name": "punctuation.definition.block.markdoc"
        }
      },
      "patterns": [
        {
          "match": "(?:[_$[:alpha:]][_$[:alnum:]]*)\\s*(?=(\\/\\*([^\\*]|(\\*[^\\/]))*\\*\\/\\s*)*:)",
          "captures": {
            "0": {
              "name": "meta.object-literal.key.markdoc"
            }
          }
        },
        {
          "begin": ":",
          "beginCaptures": {
            "0": {
              "name": "punctuation.separator.key-value.markdoc"
            }
          },
          "end": "(?=,|\\})",
          "patterns": [
            {
              "include": "#primitives"
            },
            {
              "include": "#variable"
            },
            {
              "include": "#function"
            },
            {
              "include": "#array"
            },
            {
              "include": "#object"
            }
          ]
        },
        {
          "include": "#primitives"
        },
        {
          "include": "#variable"
        },
        {
          "include": "#function"
        },
        {
          "include": "#punctuation-comma"
        }
      ]
    },
    "variable": {
      "match": "(\\$)([\\w.\\[\\]]+)",
      "name": "variable.markdoc",
      "captures": {
        "1": {
          "name": "variable.sigil.markdoc"
        },
        "2": {
          "patterns": [
            {
              "include": "#punctuation-accessor"
            },
            {
              "begin": "\\[",
              "end": "\\]",
              "captures": {
                "0": {
                  "name": "meta.brace.square.markdoc"
                }
              },
              "patterns": [
                {
                  "include": "#primitives"
                }
              ]
            }
          ]
        }
      }
    }
  }
}
